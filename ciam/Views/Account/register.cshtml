<!DOCTYPE html>
<html lang="en">
<head>
	<title>BPN</title>
	<link rel="shortcut icon" href="@(Environment.GetEnvironmentVariable("base_url"))style/images/pin.png" type="image/x-icon" />
	<meta charset="utf-8">
	<meta name="description" content="bpn">
	<meta name="keywords" content="virual, offce, vo">
	<meta name="author" content="Luthfi Munadzar">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-touch-fullscreen" content="yes">

	<!-- Load Style -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="@(Environment.GetEnvironmentVariable("base_url"))style/css/app.css" media="screen">

	<!-- Load Scripts -->
	<script type="text/javascript" src="@(Environment.GetEnvironmentVariable("base_url"))style/js/main.min.js"></script>
	<script type="text/javascript" src="@(Environment.GetEnvironmentVariable("base_url"))style/js/scripts.js"></script>

	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
