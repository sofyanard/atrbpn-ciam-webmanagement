	<![endif]-->

</head>

<body>

	<div class="login">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12 px-0">
					<div class="login-panel overflow-hidden" style="background-image: url('@(Environment.GetEnvironmentVariable("base_url"))style/images/typo.png')">
						<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/bg.png" alt="" class="bg-bot full">
						<div class="row">
							<div class="col-md-6 offset-md-3">
								<div class="row">
									<div class="col-12">
										<div class="logo mt-0">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/logo.png" alt="" />
											<h5>
												Kementerian Agraria dan Tata Ruang /
												Badan Pertanahan Nasional
											</h5>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-12">
										<div class="login-wrap">
											<h1>Registrasi</h1>
											<p>Masukan informasi anda</p>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="Username">
										</div>
									</div>
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="email" class="form-control" placeholder="Email">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="First Name">
										</div>
									</div>
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="Last Name">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="password" class="form-control" placeholder="Password">
										</div>
									</div>
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="ID Card No">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="No HP.">
										</div>
									</div>
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="Tempat Lahir">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="date" class="form-control" placeholder="Tanggal Lahir">
										</div>
									</div>
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="Nomor SK">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="date" class="form-control" placeholder="Tanggal SK">
										</div>
									</div>
									<div class="col-6">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<input type="text" class="form-control" placeholder="Tanggal SK">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-12">
										<div class="wrap-input">
											<img src="@(Environment.GetEnvironmentVariable("base_url"))style/images/user.png" alt="" class="prepend-icon">
											<select class="form-control" placeholder="Kantor">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-12">
										<button type="submit" class="btn btn-primary w-100">Submit</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		$('#toggleHide').hide()
		$('#toggleShow').on('click', function () {
			$('#inputPassword').get(0).type = 'text';
			$('#toggleShow').hide()
			$('#toggleHide').show()
		})
		$('#toggleHide').on('click', function () {
			$('#inputPassword').get(0).type = 'password';
			$('#toggleHide').hide()
			$('#toggleShow').show()
		})
	</script>

</body>
</html>
